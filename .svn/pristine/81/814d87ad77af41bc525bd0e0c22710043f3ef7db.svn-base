<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>新增任务</title>
		<link rel="stylesheet" href="../assets/css/reset.css" />
		<link rel="stylesheet" href="../assets/css/public.css" />
		<link rel="stylesheet" href="../assets/css/ifram.css" />
		
		<script type="text/javascript" src="//cdn.bootcss.com/jquery/1.12.0/jquery.min.js"></script>
		<script type="text/javascript" src="../assets/js/public.js" ></script>
		<script type="text/javascript" src="../assets/js/laydate.js" ></script>
		
		<script>
			$(function(){
				var arr1 = [1,1,1,2,2,3,3,1,2];
				var arr2 = ["福州","江苏","北京","福州","江苏","北京","江苏","江苏","北京"];
				
				$(".job_line").eq(0).append(stateLine(arr1,arr2));
				$(".backjob_line").eq(0).append(stateLine(arr1,arr2));
				
				
				for (var i=0;i<$(".lines").length;i++) {
					$(".lines").eq(i).width(70*($(".line").eq(i).find("ul li").length-1));
					for (var j=0;j<$(".line").eq(i).find("ul li").length;j++) {
						$(".line").eq(i).find("ul li").eq(j).find("p").eq(0).css({"opacity":0})
					}
				}
				
			})
		</script>
		
		<style>
			#manage_addjob .addjob_div{width: 100%;border-bottom: 1px solid #ccd0d9;}
			#manage_addjob #job_info{height: 140px;}
			#manage_addjob #job_info p{color: #5f6a6c;} 
			#manage_addjob #job_info #info1{float: left;width: 100%;}
			#manage_addjob #job_info #info1 div{float: left;margin: 20px 10px;}
			#manage_addjob #job_info #info2 div{float: left;margin: -10px 10px;}
			#manage_addjob #job_info #info3{float: left;width: 100%;}
			#manage_addjob #job_info #info3 div{float:left;margin: 10px;}
			#manage_addjob #job_city{height: 215px;}
			#manage_addjob #job_car{height: 70px;}
			
			#manage_addjob #addjob1{float: left;margin: 17px 10px;}
			#job_city #job_period{width: 140px;margin: 10px;}
			.job_line{background: #000;}
			#period_line{width: 100%;height: 60px;margin-top: -10px;float: left;}
			#backjob_period{width: 100%;}
			#backjob_period div{float: left;margin: 10px;}
			#changep p{color: #606a6c;font-size: 14px;margin-left: 10px;}
		</style>
	</head>
	<body>
		<div id="manage_addjob">
			<div id="column">
				<p>任务设置</p>
			</div>
			<div id="content">
				<div id="job_info" class="addjob_div">
					<div id="info1">
						<div class="oui_input"><p>班线名称</p><input type="text" placeholder="请输入内容"/></div>
						<div class="oui_select">
							<p>选择输入</p>
							<select>
							   <option>解放军车队一组</option>
							   <option>2</option>
							   <option>3</option>
							   <option>4</option>
							   <option>5</option>
							</select>
						</div>
						<div class="oui_input"><p>延误比例</p><input type="text" placeholder="请输入内容"/></div>
					</div>
					<div id="info2">
						<div class="oui_radio">
							<p>周期类型：</p>
							<label><input name="Rtype" type="radio" checked="checked" /><p>单次</p> </label>
							<label><input name="Rtype" type="radio" value="" /><p>周期</p></label>
						</div>
					</div>
					<div id="info3">
						<div class="oui_radio">
							<p>发车周期：</p>
							<label><input name="Rcar" type="radio" checked="checked" /><p>天</p> </label>
							<label><input name="Rcar" type="radio" value="" /><p>周</p></label>
						</div>
						<div class="oui_select">
							<p>周期间隔</p>
							<select>
							   <option>每周一</option>
							   <option>2</option>
							   <option>3</option>
							   <option>4</option>
							   <option>5</option>
							</select>
						</div>
						<div class="oui_input oui_input_date">
							<p>输入内容</p>
							<input placeholder="请输入时间" onclick="laydate({istime: true, format: 'YYYY-MM-DD hh:mm'})">
						</div>
						<div class="oui_radio">
							<p>周期结束：</p>
							<label><input name="Rend" type="radio" checked="checked" /><p>永不</p> </label>
							<label><input name="Rend" type="radio" value="" /><p>次数</p></label>
							<label><input name="Rend" type="radio" value="" /><p>某天</p></label>
						</div>
						<div class="oui_input oui_input_date">
							<input placeholder="请输入时间" onclick="laydate({istime: true, format: 'YYYY-MM-DD hh:mm'})">
						</div>
					</div>
				</div>
				<div id="job_city" class="addjob_div">
					<div class="oui_select" id="job_period">
						<p>周期间隔</p>
						<select>
						   <option>每周一</option>
						   <option>2</option>
						   <option>3</option>
						   <option>4</option>
						   <option>5</option>
						</select>
					</div>
					
					<div id="period_line">
						<div class="job_line"></div>
					</div>
					
					<div id="backjob_period">
						<div class="oui_radio" id="changep">
							<p>返程：</p>
							<label><input name="Fruit" type="radio" checked="checked" /> </label>
						</div>
						<div class="oui_select" id="city_name">
							<p>选择班线</p>
							<select>
							   <option>班线名称</option>
							   <option>2</option>
							   <option>3</option>
							   <option>4</option>
							   <option>5</option>
							</select>
						</div>
					</div>
					
					<div id="period_line">
						<div class="backjob_line"></div>
					</div>
				</div>
				<div id="job_car" class="addjob_div">
					<div id="addjob1">
						<div class="oui_select">
							<p>选择车辆</p>
							<select>
							   <option>每周一</option>
							   <option>2</option>
							   <option>3</option>
							   <option>4</option>
							   <option>5</option>
							</select>
						</div>
					</div>
					
				</div>
			</div>
		</div>
	</body>
</html>
